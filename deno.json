{
  "title": "crots — CROnos Time Sheet ⌛",
  "version": "1.0.1",
  "imports": {
    "@std/cli": "jsr:@std/cli@^0.224.7",
    "@std/io": "jsr:@std/io@^0.224.3"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["*.ts"],
    "exclude": ["index.js"]
  },
  "compilerOptions": {
    "types": [
      "./types.d.ts"
    ],
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0"
  }
}
